{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>

    {% if message is defined %}
        {{message}}
    {% endif %}
    {# ici on fait le rendu du formulaire Product #}
    {# { form(productForm) } #}

    {# ici on fait le rendu en plusieur étape #}
    {# form_start() : ouvre la balise formulaire #}
    {{ form_start(productForm) }}
        {# form_widget() : place les champs du formulaire sélectionné #}
        {{ form_widget(productForm) }}

        {# ici on place ce que qu'on veut en plus #}
        {# <button type='submit'>Envoyer</button> #}

    {# form_end() : fermer le formulaire #}
    {{ form_end(productForm) }}
</div>
{% endblock %}
